<view version="2.0">
	
    <title translatable="true">Hazard Assessments - Building By Substance</title>
    
    <report orientation="landscape"/>

    <dataSource id="abCbRptSummaryBldgSubstDetPgrp_ds" type="grouping">
        <table name="activity_log" role="main"/>
        <table name="bl" role="standard"/>
        
        <field name="bl_id" table="activity_log" groupBy="true"/>
        <field name="bl_id" table="bl" groupBy="true"/>
        <field name="bldg_photo" table="bl" groupBy="true"/>
        <field name="contact_name" table="bl" groupBy="true"/>
        <field name="image_file" table="bl" groupBy="true"/>
        <field name="contact_phone" table="bl" groupBy="true"/>
        <field name="use1" table="bl" groupBy="true"/>
        <field name="name" table="bl" groupBy="true"/>
        <field name="date_bl" table="bl" groupBy="true"/>
        <field name="address1" table="bl" groupBy="true"/>
        <field name="construction_type" table="bl" groupBy="true"/>
        <field name="address2" table="bl" groupBy="true"/>
        <field name="count_occup" table="bl" groupBy="true"/>
        <field name="city_id" table="bl" groupBy="true"/>
        <field name="count_fl" table="bl" groupBy="true"/>
        <field name="state_id" table="bl" groupBy="true"/>
        <field name="area_gross_int" table="bl" groupBy="true"/>
        <field name="zip" table="bl" groupBy="true"/>
        <field name="count_em" table="bl" groupBy="true"/>
        <field name="site_id" table="bl" groupBy="true"/>
        <field name="lat" table="bl" groupBy="true"/>
        <field name="regn_id" table="bl" groupBy="true"/>
        <field name="lon" table="bl" groupBy="true"/>
        <field name="ctry_id" table="bl" groupBy="true"/>
        <field name="area_rm" table="bl" groupBy="true"/>
        <field name="pr_id" table="bl" groupBy="true"/>
        <field name="comments" table="bl" groupBy="true"/>
        <field name="prob_type" groupBy="true"/>
        
        <field name="vf_total" dataType="number" size="12" decimals="0">
            <sql dialect="generic">COUNT(activity_log.activity_log_id)</sql>
        </field>
        <field name="vf_hazardous" dataType="number" size="12" decimals="0">
            <sql dialect="generic">COUNT(CASE WHEN hcm_is_hazard &lt;&gt; 'No' THEN hcm_is_hazard ELSE NULL END)</sql>
        </field>
        <field name="vf_active" dataType="number" size="12" decimals="0">
            <sql dialect="generic">COUNT(CASE WHEN hcm_is_hazard IN('Yes','Presumed') THEN hcm_is_hazard ELSE NULL END)</sql>
        </field>
        <field name="vf_abated" dataType="number" size="12" decimals="0">
            <sql dialect="generic">COUNT(CASE WHEN hcm_is_hazard = 'All Abated' THEN hcm_is_hazard ELSE NULL END)</sql>
        </field>
        <field name="vf_floors" dataType="number" size="12" decimals="0">
            <sql dialect="generic">COUNT(DISTINCT activity_log.fl_id)</sql>
        </field>
        <field name="vf_rooms" dataType="number" size="12" decimals="0">
            <sql dialect="generic">COUNT(DISTINCT activity_log.rm_id)</sql>
        </field>
        <field name="vf_costEstBase" dataType="number" size="12" decimals="2">
            <sql dialect="generic">SUM(cost_est_cap + cost_estimated)</sql>
        </field>
        <field name="vf_costActual" dataType="number" size="12" decimals="2">
            <sql dialect="generic">SUM(cost_actual + cost_act_cap)</sql>
        </field>
        
        <restriction type="sql" sql="activity_log.activity_type = 'ASSESSMENT - HAZMAT' AND ${parameters['consoleRestriction']}"/>
        
        <parameter name="consoleRestriction" dataType="verbatim" value="1=1"/>
        
        <sortField name="bl_id" table="activity_log" ascending="true"/>
        <sortField name="prob_type" ascending="true"/>
    </dataSource>
    
    <panel id="abCbRptSummaryBldgSubstDetPgrp_panel" dataSource="abCbRptSummaryBldgSubstDetPgrp_ds" type="paginatedReport" format="column" columns="2" role="parent">
        <field name="bldg_photo" table="bl"/>
        <field name="contact_name" table="bl"/>
        <field name="image_file" table="bl"/>
        <field name="contact_phone" table="bl"/>
        <field name="bl_id" table="activity_log" restrictionParameterName="blId"/>
        <field name="use1" table="bl"/>
        <field name="name" table="bl"/>
        <field name="date_bl" table="bl"/>
        <field name="address1" table="bl"/>
        <field name="construction_type" table="bl"/>
        <field name="address2" table="bl"/>
        <field name="count_occup" table="bl"/>
        <field name="city_id" table="bl"/>
        <field name="count_fl" table="bl"/>
        <field name="state_id" table="bl"/>
        <field name="area_gross_int" table="bl"/>
        <field name="zip" table="bl"/>
        <field name="count_em" table="bl"/>
        <field name="site_id" table="bl"/>
        <field name="lat" table="bl"/>
        <field name="regn_id" table="bl"/>
        <field name="lon" table="bl"/>
        <field name="ctry_id" table="bl"/>
        <field name="area_rm" table="bl"/>
        <field name="pr_id" table="bl"/>
        <field name="comments" table="bl"/>
        
        <field name="prob_type" restrictionParameterName="probType">
            <title translatable="true">Substance</title>
        </field>
        
        <field name="vf_total">
            <title translatable="true">Total</title>
        </field>
        <field name="vf_hazardous">
            <title translatable="true">Hazardous</title>
        </field>
        <field name="vf_active">
            <title translatable="true">Active</title>
        </field>
        <field name="vf_abated">
            <title translatable="true">Abated</title>
        </field>
        <field name="vf_floors">
            <title translatable="true">Floors</title>
        </field>
        <field name="vf_rooms">
            <title translatable="true">Rooms</title>
        </field>
        <field name="vf_costEstBase">
            <title translatable="true">Cost-Est Baseline</title>
        </field>
        <field name="vf_costActual">
            <title translatable="true">Cost-Actual</title>
        </field>
    </panel>

    <dataSource id="abCbRptAssessPgrp_dsAssess">
        <table name="activity_log" role="main"/>
        
        <field name="activity_log_id"/>
        <field name="project_id"/>
        <field name="prob_type"/>
        <field name="site_id"/>
        <field name="date_assessed"/>
        <field name="hcm_haz_status_id"/>
        <field name="bl_id"/>
        <field name="hcm_id"/>
        <field name="hcm_cond_id"/>
        <field name="fl_id"/>
        <field name="action_title"/>
        <field name="hcm_haz_rank_id"/>
        <field name="rm_id"/>
        <field name="hcm_qty"/>
        <field name="hcm_haz_rating_id"/>
        <field name="hcm_loc_typ_id"/>
        <field name="cb_units_id"/>
        <field name="repair_type"/>
        <field name="location"/>
        <field name="hcm_is_hazard"/>
        <field name="vf_costEstBase" dataType="number" size="12" decimals="2">
            <sql dialect="generic">
                (cost_est_cap + cost_estimated)
            </sql>
        </field>
        <field name="hcm_harea_id"/>
        <field name="hcm_friable"/>
        <field name="vf_costActual" dataType="number" size="12" decimals="2">
            <sql dialect="generic">
                (cost_actual + cost_act_cap)
            </sql>
        </field>
        <field name="hcm_pipe_cnt"/>
        <field name="hcm_fittings_num"/>
        <field name="hcm_pending_act"/>
        <field name="hcm_class1_id"/>
        <field name="hcm_class2_id"/>
        <field name="hcm_class3_id"/>
        <field name="cause_type"/>
        <field name="hcm_labeled"/>
        <field name="rec_action"/>
        <field name="assessed_by"/>
        <field name="assigned_to"/>
        <field name="hcm_abate_by"/>
        <field name="date_review"/>
        <field name="date_installed"/>
        <field name="date_closed"/>
        
        <field name="hcm_loc_notes"/>
        <field name="doc"/>
        <field name="doc1"/>
        <field name="doc2"/>
        <field name="description"/>
        <field name="doc3"/>
        <field name="doc4"/>
        
        
        <restriction type="parsed">
            <clause table="activity_log" name="bl_id" op="=" value="${parameters['blId']}"/>
            <clause relop="AND" table="activity_log" name="prob_type" op="=" value="${parameters['probType']}"/>
        </restriction>
        <restriction type="sql" sql="activity_log.activity_type = 'ASSESSMENT - HAZMAT' AND ${parameters['consoleRestriction']}"/>
        
        <parameter name="blId" dataType="text" value=""/>
        <parameter name="probType" dataType="text" value=""/>
        <parameter name="consoleRestriction" dataType="verbatim" value="1=1"/>
        
        <sortField name="activity_log_id" ascending="true"/>
    </dataSource>
    
