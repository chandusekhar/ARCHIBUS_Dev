<view version="2.0">
	<js file="ab-comp-rpt-violation-map-bl-tree.js"/>

	<message name="error_noselection" translatable="true">Select a location</message>
	<message name="world" translatable="true">WORLD</message>

	<dataSource id="dsTreeWorld">
		<sql dialect="sybase">
			select 'world' ${sql.as} world from dummy
        </sql>

		<sql dialect="oracle">
			select 'world' ${sql.as} world from dual
        </sql>

		<sql dialect="sqlserver">
			select 'world' ${sql.as} world
        </sql>

		<table name="ctry" role="main"/>
		<field name="world" table="ctry" dataType="text"/>
	</dataSource>

	<dataSource id="dsTreeCountry">
		<table name="ctry" role="main"/>
		<field table="ctry" name="ctry_id"/>
		<restriction type="sql" sql="exists (select 1 from regviolation LEFT OUTER JOIN compliance_locations ON compliance_locations.location_id = regviolation.location_id where compliance_locations.ctry_id = ctry.ctry_id)"/>
	</dataSource>

	<dataSource id="dsTreeRegion">
		<table name="regn" role="main"/>
		<field table="regn" name="regn_id"/>
		<field table="regn" name="name"/>
		<restriction type="sql" sql="exists (select 1 from regviolation LEFT OUTER JOIN compliance_locations ON compliance_locations.location_id = regviolation.location_id where compliance_locations.regn_id = regn.regn_id and compliance_locations.ctry_id = regn.ctry_id)"/>
	</dataSource>

	<dataSource id="dsTreeState">
		<table name="state" role="main"/>
		<field table="state" name="state_id"/>
		<field table="state" name="name"/>
		<restriction type="sql" sql="exists (select 1 from regviolation LEFT OUTER JOIN compliance_locations ON compliance_locations.location_id = regviolation.location_id where compliance_locations.state_id = state.state_id)"/>
	</dataSource>

	<dataSource id="dsTreeCity">
		<table name="city" role="main"/>
		<field table="city" name="city_id"/>
		<field table="city" name="name"/>
		<restriction type="sql" sql="exists (select 1 from regviolation LEFT OUTER JOIN compliance_locations ON compliance_locations.location_id = regviolation.location_id where compliance_locations.city_id = city.city_id and compliance_locations.state_id = city.state_id)"/>
	</dataSource>

	<dataSource id="dsTreeSite">
		<table name="site" role="main"/>
		<field table="site" name="site_id"/>
		<field table="site" name="name"/>
		<restriction type="sql" sql="exists (select 1 from regviolation LEFT OUTER JOIN compliance_locations ON compliance_locations.location_id = regviolation.location_id where compliance_locations.site_id = site.site_id)"/>
	</dataSource>
	
	<dataSource id="dsTreeBl">
		<table name="bl" role="main"/>
		<field table="bl" name="bl_id"/>
		<field table="bl" name="name"/>
        <restriction type="sql" sql="exists (select 1 from regviolation LEFT OUTER JOIN compliance_locations ON compliance_locations.location_id = regviolation.location_id where compliance_locations.bl_id = bl.bl_id)"/>
	</dataSource>

	<dataSource id="dsBldgBuildings">
		<table name="bl" role="main"/>
		<field table="bl" name="bl_id"/>
		<sortField table="bl" name="bl_id" ascending="true"/>
	</dataSource>


	<panel type="tree" id="worldTree" dataSource="dsTreeWorld">

		<action id="unselectAll">
			<title>Unselect All</title>
		</action>
		<action id="showSelected">
			<title>Show Selected</title>
		</action>

		<panel type="tree" id="countryTree" dataSource="dsTreeCountry"/>
		<panel type="tree" id="regionTree" dataSource="dsTreeRegion"/>
		<panel type="tree" id="stateTree" dataSource="dsTreeState"/>
		<panel type="tree" id="cityTree" dataSource="dsTreeCity"/>
		<panel type="tree" id="siteTree" dataSource="dsTreeSite"/>
		<panel type="tree" id="blTree" dataSource="dsTreeBl"/>
	</panel>

</view>
