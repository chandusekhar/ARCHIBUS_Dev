<view version="2.0">
    <designInfo type="summary" pattern="ab-viewdef-summary-report" isAlterable="false"/>
    
    <title translatable="true">View Vertical Penetration Summary by Type</title>
    
    <dataSource id="ds_ab-sp-vw-vert-by-rmtype_crossTable_rm" type="grouping">
        <table name="rm" role="main"/>
        <field name="rm_type" groupBy="true"/>
        <field name="total_count" formula="count" baseField="rm.rm_id" dataType="number" decimals="0">
            <title translatable="true">Total Count</title>
        </field>
        <field name="total_area" formula="sum" baseField="rm.area" dataType="number" decimals="2">
            <title translatable="true">Total Area</title>
        </field>
        <field name="avg_area" formula="avg" baseField="rm.area" dataType="number" decimals="2">
            <title translatable="true">Average Area</title>
        </field>
        <restriction type="sql" sql="EXISTS (SELECT 1 FROM rmcat WHERE rmcat.supercat ='VERT' AND rmcat.rm_cat = rm.rm_cat)"/>
        <sortField name="rm_type" table="rm" ascending="true"/>
    </dataSource>
    
    <dataSource id="ds_ab-sp-vw-vert-by-rmtype_grid_rm">
        <table name="rm" role="main"/>
        <field name="rm_type"/>
        <field name="bl_id"/>
        <field name="fl_id"/>
        <field name="rm_id"/>
        <field name="area"/>
        <restriction type="sql" sql="EXISTS (SELECT 1 FROM rmcat WHERE rmcat.supercat ='VERT' AND rmcat.rm_cat = rm.rm_cat)"/>
    </dataSource>
    
    <panel type="crossTable" id="vertByTypeGrid" showOnLoad="true" dataSource="ds_ab-sp-vw-vert-by-rmtype_crossTable_rm">
        <event type="onClickItem">
            <command type="openDialog" panelId="vertRmDetailGrid" width="600" height="400"/>
        </event>
    </panel>
    
    <panel type="grid" id="vertRmDetailGrid" showOnLoad="false" dataSource="ds_ab-sp-vw-vert-by-rmtype_grid_rm" hidden="true">
        <field name="bl_id"/>
        <field name="fl_id"/>
        <field name="rm_id"/>
        <field name="area"/>
    </panel>
</view>
