<view version="2.0">
    <title translatable="false">&#160;</title>
    <js file="ab-repm-pfadmin-struc-book-vs-market-by-chart.js"/>
    
    <!-- Messages -->
    <message name="titleStructBookMarketValBy" translatable="true">Structure Book &amp; Market Value by {0}</message>

    <dataSource id="abRepmStructBookMarketValChartGroupingAxis_ds" type="grouping" applyVpaRestrictions="false">
        <sql dialect="generic">
            SELECT 
                property.ctry_id ${sql.as} ctry_id,
                property.regn_id ${sql.as} regn_id,
                property.state_id ${sql.as} state_id,
                property.city_id ${sql.as} city_id,
                property.site_id ${sql.as} site_id,
                property.pr_id ${sql.as} pr_id,
                property.property_type ${sql.as} property_type
            FROM property
        </sql>
        <table name="property" role="main"/>
        <field name="group_by" dataType="text" groupBy="true">
            <sql dialect="generic">
                (${parameters['groupBy']})
            </sql>
        </field>
        <parameter name="filter" dataType="verbatim" value="1 = 1"/>
        <parameter name="groupBy" dataType="verbatim" value="property.ctry_id"/>
        <restriction type="sql" sql="property.property_type = 'Structure' AND ${parameters['filter']} AND ${sql.vpaRestriction}"/>
        <sortField table="property" name="group_by" ascending="true"/>
    </dataSource>


    <dataSource id="abRepmStructBookMarketValChartDataAxis_ds" type="grouping" applyVpaRestrictions="false">
        <sql dialect="generic">
            SELECT 
                property.ctry_id ${sql.as} ctry_id,
                property.regn_id ${sql.as} regn_id,
                property.state_id ${sql.as} state_id,
                property.city_id ${sql.as} city_id,
                property.site_id ${sql.as} site_id,
                property.pr_id ${sql.as} pr_id,
                property.property_type ${sql.as} property_type,
                (property.value_book * ${sql.exchangeRateFromBudgetToUserForDate('Budget', 'property.date_book_val')}) ${sql.as} value_book,
                (property.value_market * ${sql.exchangeRateFromBudgetToUserForDate('Budget', 'property.date_market_val')}) ${sql.as} value_market
            FROM property
        </sql>
        <table name="property" role="main"/>
        <field name="group_by" dataType="text" groupBy="true">
            <sql dialect="generic">
                (${parameters['groupBy']})
            </sql>
        </field>
        <field name="vf_sum_value_book" formula="sum" baseField="property.value_book" dataType="number" size="20" decimals="2" currency="${user.userCurrency.code}">
            <title>Book Value</title>
        </field>
        <field name="vf_sum_value_market" formula="sum" baseField="property.value_market" dataType="number" size="20" decimals="2" currency="${user.userCurrency.code}">
            <title>Market Value</title>
        </field>
        <restriction type="sql" sql="property.property_type = 'Structure' AND ${parameters['groupBy']} = ${parameters['summaryValueForThisGroup']} AND ${parameters['filter']} AND ${sql.vpaRestriction}"/>
        <parameter name="summaryValueForThisGroup" dataType="text" value=""/>  
        <parameter name="filter" dataType="verbatim" value="1 = 1"/>
        <parameter name="groupBy" dataType="verbatim" value="property.ctry_id"/>
        <sortField table="property" name="group_by" ascending="true"/>
    </dataSource>
       

    <panel id="abRepmStructBookMarketValChart" type="chart" showOnLoad="false" controlType="columnChart" showLegendOnLoad="false" dataSource="abRepmStructBookMarketValChartDataAxis_ds">
        <title></title>
        <event type="onClickItem">
            <command type="callFunction" functionName="onDrillDown"/>                 
        </event>
        <action id="filter" imageName="/schema/ab-system/graphics/ab-filter-run.gif">
            <tooltip>Filter</tooltip>
        </action>
        <action id="report" imageName="/schema/ab-system/graphics/ab-icon-report.gif">
            <tooltip>Report</tooltip>      
        </action>
        <action id="export">
            <title translatable="true">DOC </title>
            <command type="exportPanel" outputType="docx" panelId="abRepmStructBookMarketValChart" orientation="landscape"/>
        </action>
        <dataAxisTitle translatable="true">Book and Market Values</dataAxisTitle>
        <groupingAxis table="property" field="group_by"  dataSource="abRepmStructBookMarketValChartGroupingAxis_ds">
            <title></title> 
        </groupingAxis>
        
        <dataAxis  table="property" field="vf_sum_value_book" dataSource="abRepmStructBookMarketValChartDataAxis_ds">
             <title>Book Value</title>
        </dataAxis>
        <dataAxis  table="property" field="vf_sum_value_market" dataSource="abRepmStructBookMarketValChartDataAxis_ds">
             <title>Market Value</title>
        </dataAxis>
    </panel>
    
    <!-- Report -->
    <dataSource id="abRepmStructBookMarketValReport_ds" type="grouping" applyVpaRestrictions="false">
        <sql dialect="generic">
            SELECT 
                property.ctry_id ${sql.as} ctry_id,
                property.regn_id ${sql.as} regn_id,
                property.state_id ${sql.as} state_id,
                property.city_id ${sql.as} city_id,
                property.site_id ${sql.as} site_id,
                property.pr_id ${sql.as} pr_id,
                property.property_type ${sql.as} property_type,
                (property.value_book * ${sql.exchangeRateFromBudgetToUserForDate('Budget', 'property.date_book_val')}) ${sql.as} value_book,
                (property.value_market * ${sql.exchangeRateFromBudgetToUserForDate('Budget', 'property.date_market_val')}) ${sql.as} value_market
            FROM property
        </sql>
        <table name="property"/>
        <field name="group_by" dataType="text" groupBy="true">
            <sql dialect="generic">
                (${parameters['groupBy']})
            </sql>
        </field>
        <field name="vf_sum_value_book" formula="sum" baseField="property.value_book" dataType="number" size="20" decimals="2" currency="${user.userCurrency.code}">
            <title>Book Value</title>
        </field>
        <field name="vf_sum_value_market" formula="sum" baseField="property.value_market" dataType="number" size="20" decimals="2" currency="${user.userCurrency.code}">
            <title>Market Value</title>
        </field>
        <parameter name="filter" dataType="verbatim" value="1 = 1"/>
        <parameter name="groupBy" dataType="verbatim" value="property.ctry_id"/>
        <restriction type="sql" sql="property.property_type = 'Structure' AND ${parameters['filter']} AND ${sql.vpaRestriction}"/>
    </dataSource>
    
    <panel type="grid" controlType="reportGrid" id="abRepmStructBookMarketValReport" dataSource="abRepmStructBookMarketValReport_ds" recordLimit="0" showOnLoad="false" hidden="true">
        <sortField table="property" name="group_by" ascending="true"/>
        <action id="exportXlS">
            <title translatable="true">XLS</title>
            <command type="exportPanel" outputType="xls" panelId="abRepmStructBookMarketValReport" viewName="ab-repm-pfadmin-struc-book-vs-market-by-chart.axvw"/>
        </action>
        <field name="group_by" dataType="text"/>
        <field name="vf_sum_value_book" dataType="number" size="20" decimals="2" currency="${user.userCurrency.code}">
            <title>Book Value</title>
        </field>
        <field name="vf_sum_value_market" dataType="number" size="20" decimals="2" currency="${user.userCurrency.code}">
            <title>Market Value</title>
        </field>
    </panel>
        
    <panel type="view" id="abRepmStructBookMarketVal_kpiCommon" file="ab-repm-kpi-common.axvw"/>
    
</view>