<view version="2.0">

    <panel type="view" id="exPrgQuestionnaireWizard_viewPanel" file="ab-questionnaire.axvw"/>
    
    <js file="ab-ex-prg-questionnaire-wizard-form.js"/>
    <message name="questField">activity_log.act_quest</message>
    
    <dataSource id="exPrgQuestionnaireWizard_actionDs">
        <table name="activity_log" role="main"/>
        <field name="activity_log_id"/>
        <field name="act_quest"/>
    </dataSource>

    <panel id="exPrgQuestionnaireWizard_sampleForm" type="form" columns="1" dataSource="exPrgQuestionnaireWizard_actionDs">
    	<instructions>Click the Show button to populate the Questionnaire Storage Field with XML data from the Questionnaire.</instructions>
        <title>Sample Action Item Questionnaire Form</title>
        <action>
            <title>Show</title>             
            <command type="saveForm"/>
        </action>
        <action>
            <title>Close</title>
            <command type="closeDialog"/>
        </action>
        <field name="activity_log_id" hidden="true"/>
        <!--  questionnaire answer field normally a hidden field -->
        <field name="act_quest" hidden="false" style="height:100px;">
        	<title>Questionnaire Storage Field</title>
        </field>
    </panel>
</view>