<view version="2.0">
    <title>Test view for grouping data source: Counting all records in a table</title>
    
    <dataSource type="grouping" id="exGroupingDsCount_ds1">
        <table name="pms"/>
        
        <field name="pms_count" formula="count" baseField="pms.pms_id" dataType="integer"/>
    </dataSource>
    
    <panel type="grid" id="exGroupingDsCount_grid" dataSource="exGroupingDsCount_ds1">
        <title>Total count of PM schedules</title>
    </panel>
</view>    