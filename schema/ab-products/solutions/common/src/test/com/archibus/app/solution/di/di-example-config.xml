<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <bean
        id="EmployeesJob"
        class="com.archibus.app.solution.common.webservice.employee.EmployeesJob"
        scope="prototype"
        p:propertiesValuesFromContextExample-ref="propertiesValuesFromContextExample">
    </bean>
    <bean
        id="propertiesValuesFromContextExample"
        class="com.archibus.app.solution.di.PropertiesValuesFromContextExample"
        p:currencyConversions="#{project.currencyConversions}"
        p:baseUnits="#{project.units}"
        p:webAppPath="#{configManager.webAppPath}"
        p:currency="#{userAccount.userCurrency}"
        p:locale="#{userAccount.locale}"
        p:configManager-ref="configManager"
        p:jobManager-ref="jobManager"
        p:job-ref="recreateStructuresJob"
        p:project-ref="project"
        p:userAccount-ref="userAccount"
        scope="prototype">
    </bean>
    <bean
        id="recreateStructuresJob"
        class="com.archibus.app.sysadmin.updatewizard.schema.job.RecreateStructuresJob"
        scope="prototype">
    </bean>
</beans>
