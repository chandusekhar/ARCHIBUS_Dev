<view version="2.0">
    <designInfo type="report" pattern="ab-viewdef-report" isAlterable="true"/>
    <title translatable="true"></title>
    
    <dataSource id="abDbMyApprovals_ds_0">
       <table name="activity_log" role="main"/>
       <field table="activity_log" name="date_required"/>
       <field table="activity_log" name="description"/>
       <restriction type="sql" sql="date_review &gt; #Date%CurrentDateTime% AND (activity_log.activity_type LIKE 'PROPERTY%' OR activity_log.activity_type LIKE 'LEASE%')">
       </restriction>
    </dataSource>
    
    <panel type="grid" id="abDbMyApprovals_detailsPanel" dataSource="abDbMyApprovals_ds_0" multipleSelectionEnabled="false">
        <title translatable="true">My Approvals</title>
        <action id="abDbMyApprovals_refresh">
            <title translatable="true">Refresh</title>
            <command type="showPanel" panelId="abDbMyApprovals_detailsPanel"/>
        </action>
        <action id="abDbMyApprovals_export:PDF">
            <title>PDF</title>
            <command type="exportPanel" outputType="pdf" panelId="abDbMyApprovals_detailsPanel"/>
        </action>
        <action id="abDbMyApprovals_export:XLS">
            <title>XLS</title>
            <command type="exportPanel" outputType="xls" panelId="abDbMyApprovals_detailsPanel"/>
        </action>               
        <field name="date_required" table="activity_log"/>
        <field name="description" table="activity_log"/>
        <sortField name="date_required" table="activity_log" ascending="true"/>             
    </panel>
</view>
