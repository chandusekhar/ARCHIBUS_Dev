<view version="2.0">
    <designInfo type="paginated" pattern="ab-viewdef-paginated-highlight-restriction" isAlterable="true"/>
    <title translatable="true">Highlight Buildings and Rooms with Issues of Life Safety</title>
    <report orientation="landscape"/>
    
    <dataSource id="dsCaHighRmLSRep_pgrp">
    	<sql dialect="generic">
			SELECT activity_log.bl_id, 
				activity_log.project_id,
				activity_log.fl_id, 
				activity_log.rm_id, 
				activity_log.eq_id, 
				rm.dwgname ${sql.as}dwgname, 
				activity_log.activity_log_id, 
				activity_log.description, 
				activity_log.cond_priority, 
				activity_log.cost_est_cap, 
				activity_log.cost_estimated 
			FROM activity_log,rm, project
			WHERE 
			activity_log.cond_priority = 10 
			AND activity_log.bl_id = rm.bl_id 
			AND activity_log.fl_id = rm.fl_id 
			AND activity_log.rm_id = rm.rm_id
			AND activity_type='ASSESSMENT' 
			AND activity_log.project_id = project.project_id
			AND project.project_type = 'ASSESSMENT'
			${parameters['consoleRestriction']}
		</sql>
		<table name="activity_log" role="main"/>
		<table name="project" role="standard"/>
		<field table="activity_log" name="project_id"/>
		<field table="activity_log" name="bl_id"/>
		<field table="activity_log" name="fl_id"/>
		<field table="activity_log" name="rm_id"/>
		<field table="activity_log" name="eq_id"/>
		<field table="activity_log" name="activity_log_id"/>
		<field table="activity_log" name="description"/>
		<field table="activity_log" name="cond_priority"/>
		<field table="activity_log" name="cost_est_cap"/>
		<field table="activity_log" name="cost_estimated"/>
		<parameter name="consoleRestriction" dataType="verbatim" value=""/>
	</dataSource>
    
     <dataSource id="dsCaHighRmLSDrawing_rmHighlight_pgrp">
        <table name="rm" role="main"/>
        <field table="rm" name="bl_id"/>
        <field table="rm" name="fl_id"/>
        <field table="rm" name="rm_id"/>
        <field table="rm" name="area"/>
		<parameter name="drawPanelRest" dataType="verbatim" value=""/>
		<restriction type="sql" sql="EXISTS (SELECT 1 FROM  activity_log a, project b WHERE rm.bl_id=a.bl_id and rm.fl_id=a.fl_id and rm.rm_id=a.rm_id and a.cond_priority = 10 AND a.activity_type='ASSESSMENT' AND a.project_id IS NOT NULL AND b.project_id=a.project_id AND b.project_type='ASSESSMENT' ${parameters['drawPanelRest']})"/>
    </dataSource>
	
	<dataSource id="dsCaHighRmLSDrawing_drawing_rmLabel_pgrp">
        <table name="rm" role="main"/>
        <field name="rm_id"/>
        <field name="area"/>
    </dataSource>
   
    <panel type="drawing" id="caHighRmLS_DrawingPanel_pgrp"
	 highlightDataSource="dsCaHighRmLSDrawing_rmHighlight_pgrp"
     labelsDataSource="dsCaHighRmLSDrawing_drawing_rmLabel_pgrp"
     highlightType="restriction">
    </panel>
   
    <panel type="legend" id="gridCaHighRmLSRep_pgrp" dataSource="dsCaHighRmLSRep_pgrp" format="table" role="legend">
    	<sortField name="bl_id" table="activity_log" ascending="true"/>
		<sortField name="fl_id" table="activity_log" ascending="true"/>
		<sortField name="rm_id" table="activity_log" ascending="true"/>
    </panel>
</view>
